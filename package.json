{
  "name": "pausely",
  "version": "1.0.0",
  "private": true,
  "description": "Impulse Control App for Adults - MVP",
  "scripts": {
    "dev": "pnpm --filter './apps/*' --filter './packages/*' dev",
    "build": "pnpm --filter './apps/*' --filter './packages/*' build",
    "lint": "eslint . --ext .ts,.tsx",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "type-check": "pnpm --filter './apps/*' --filter './packages/*' type-check",
    "db:generate": "pnpm --filter @pausely/db generate",
    "db:migrate": "pnpm --filter @pausely/db migrate",
    "db:studio": "pnpm --filter @pausely/db studio"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "prettier": "^3.1.0",
    "typescript": "^5.3.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.0",
  "pnpm": {
    "overrides": {
      "prisma": "5.22.0",
      "@prisma/client": "5.22.0",
      "@prisma/engines": "5.22.0",
      "@prisma/engines-version": "5.22.0"
    },
    "peerDependencyRules": {
      "allowedVersions": {
        "prisma": "5.22.0"
      }
    },
    "packageExtensions": {
      "@pausely/db": {
        "dependencies": {
          "@prisma/client": "5.22.0"
        },
        "devDependencies": {
          "prisma": "5.22.0"
        }
      }
    }
  }
}

